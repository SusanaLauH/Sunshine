<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_defaultValue"
        android:inputType="text"
        android:singleLine="true" />


    <ListPreference
        android:key="@string/pref_temperature_key"
        android:title="@string/pref_temperature_title"
        android:dialogTitle="@string/pref_temperature_dialogTitle"
        android:entries="@array/pref_temperature_entries"
        android:entryValues="@array/pref_temperature_values"
        android:defaultValue="@string/pref_temperature_defaultValue"/>

</PreferenceScreen>